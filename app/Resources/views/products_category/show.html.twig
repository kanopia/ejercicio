{% extends 'base.html.twig' %}

{% block body %}
    <h1>Products_category</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ products_Category.id }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ products_Category.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ products_Category.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ products_Category.description }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{% if products_Category.active %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('products_category_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('products_category_edit', { 'id': products_Category.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
