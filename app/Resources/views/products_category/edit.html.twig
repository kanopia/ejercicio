{% extends 'base.html.twig' %}

{% block body %}
    
    <div class="col-xs-4 col-md-4">

        <div class="box box-success">
            <div class="box-header with-border">
                <h3 class="box-title"><i class="fa fa-list" aria-hidden="true"></i>&nbsp;Editar Categoria</h3>
            </div>
            <div class="box-body">
                <div class="col-xs-5 col-md-5 ">            
                    {{ form_start(edit_form) }}
                    {{ form_widget(edit_form) }}
                </div>      
                 <div class="col-xs-12 col-md-12"> 
                        <br/>   
                        <input class="btn btn-block btn-info" type="submit" value="Editar" />
                        {{ form_end(edit_form) }}
                    </div>

                    <div class="col-xs-12 col-md-12">   
                        <br/>    
                        {{ form_start(delete_form) }}
                            <input class="btn btn-block btn-danger" type="submit" value="Borrar">
                        {{ form_end(delete_form) }}
                    </div>                                   
            </div>
        </div>            
    </div>

{% endblock %}


